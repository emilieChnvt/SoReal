{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}

    <div class="flex justify-between text-white">
            <a href="{{ path('app_profile', {id:app.user.id}) }}">Annuler</a>
            <p class="font-semibold">Modifier le profil</p>
            <button type="submit">Enregitrer</button>
    </div>
    <div class="flex flex-col gap-y-[35px] mt-5">
        <div class="flex items-center justify-center">

            {% if app.user.profile.image %}
                <a href="{{ path('app_profile_add_image', {id:profile.id}) }}">
                    <img class=" h-[130px] w-[130px] rounded-full border border-[#8D8484]" src="{{ vich_uploader_asset(app.user.profile.image, 'imageFile') }}" />

                </a>
            {% else %}
                <a href="{{path('app_profile_add_image', {id: profile.id}) }}">
                    <img class=" h-[130px] w-[130px] rounded-full border border-[#8D8484]" src="{{ asset('images/avatar.jpg') }}" />

                </a>
            {% endif%}

        </div>
        <div>
            <div class="flex items-center bg-transparent border-t border-b border-gray-300">
                {{ form_label(form.displayName, null, {'label_attr': {'class': 'mr-2 text-white w-full py-2'}}) }}
                {{ form_widget(form.displayName, {'attr': {'class': 'bg-transparent  border-none focus:outline-none'}}) }}
            </div>


            <div class="flex items-center bg-transparent border-t border-b border-gray-300">
                {{ form_label(form.Bio, null, {'label_attr': {'class': 'mr-2 text-white w-full py-2'}}) }}
                {{ form_widget(form.Bio, {'attr': {'class': 'bg-transparent  border-none focus:outline-none'}}) }}
            </div>
        </div>
    </div>


    {{ form_end(form) }}

{% endblock %}

