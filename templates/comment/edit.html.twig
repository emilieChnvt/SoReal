{% extends 'base.html.twig' %}

{% block title %}
    Modifier le commentaire
{% endblock %}

{% block body %}
    <div class="max-w-xl mx-auto mt-10 p-6 bg-white rounded-xl shadow-md">
        <h1 class="text-2xl font-semibold mb-4 text-gray-800">Modifier le commentaire</h1>

        {{ form_start(commentForm, {
            attr: { class: 'space-y-4' }
        }) }}

        {{ form_row(commentForm.content, {
            label: 'Ton commentaire',
            attr: {
                class: 'w-full px-4 py-2 border rounded-md text-sm'
            }
        }) }}

        <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
            Enregistrer les modifications
        </button>

        {{ form_end(commentForm) }}

        <a href="{{ path('app_post_show', { id: comment.post.id }) }}" class="block mt-4 text-sm text-gray-600 hover:underline">
            ← Retour à l'article
        </a>
    </div>
{% endblock %}

