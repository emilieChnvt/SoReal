{% extends 'base.html.twig' %}

{% block title %}Chat{% endblock %}

{% block body %}
    <div class="space-y-6">

        <div class=" text-white p-6 rounded-lg  max-w-3xl mx-auto">
            {% for message in chat.messages %}
                <div class="flex items-center justify-{{ message.author.ofUser == app.user.profile.ofUser ? 'end' : 'start' }} mb-4">
                    <div class="bg-[#8D8484] border text-white rounded-lg p-4 max-w-xs w-auto">
                        <p class="text-sm">
                            {% if message.author.ofUser == app.user.profile.ofUser %}
                                <strong class="text-right text-white">{{ message.author.ofUser.email }}</strong>
                            {% else %}
                                <strong class="text-left text-white">{{ message.author.ofUser.email }}</strong>
                            {% endif %}
                            : {{ message.content }}
                        </p>
                    </div>
                </div>
            {% else %}
                <p class="text-center text-[#8D8484]">Aucun message pour le moment.</p>
            {% endfor %}
        </div>

        <div class="max-w-3xl mx-auto bg-[#8D8484] p-6 rounded-lg">
            {{ form_start(form) }}
            <div class="mb-4">
                {{ form_widget(form.content, {'attr': {'class': 'w-full border border-[#8D8484] rounded-md p-4 text-gray-200 bg-[#8D8484] '}}) }}
            </div>
            <button type="submit" class="border text-white px-6 py-3 rounded-full ">
                Envoyer
            </button>
            {{ form_end(form) }}
        </div>

    </div>
{% endblock %}
