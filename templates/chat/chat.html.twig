{% set navbar = false %}

{% extends 'base.html.twig' %}

{% block title %}Chat{% endblock %}

{% block body %}
    <div class="flex flex-col h-full justify-between text-white composer require league/oauth2-google">
        <div class="flex justify-between mt-3">
            <div>
                <a href="{{ path('profiles') }}">{{ ux_icon('fluent:ios-arrow-24-filled', { class: 'w-[20px] h-[20px]' }) }}</a>
            </div>
            <div class="flex gap-x-[15px]">

                <a href="{{ path('app_profile', {id: receiver.id}) }}" class="flex items-center mb-2">
                    <div class="text-sm mx-2">
                        <strong>{{ receiver.displayName }}</strong><br>
                    </div>

                    {% if receiver.image %}
                        <img src="{{ vich_uploader_asset(receiver.image) }}" alt="Profil" class="w-8 h-8 rounded-full mr-2" />
                    {% else %}
                        <img src="{{ asset('images/avatar.jpg') }}" alt="Profil" class="w-8 h-8 rounded-full mr-2" />
                    {% endif %}

                </a>

            </div>
        </div>
        <div class="flex-1  p-6 space-y-4 max-w-2xl mx-auto w-full pb-28">
            {% for message in chat.messages %}
                {% set isCurrentUser = message.author.id == app.user.profile.id %}
                <div class="flex {{ isCurrentUser ? 'justify-end' : 'justify-start' }}">
                    <div class="max-w-[70%] px-4 py-2 rounded-2xl text-sm shadow-md
                                {{ isCurrentUser ? 'bg-blue-600 rounded-br-none' : 'bg-[#8D8484] rounded-bl-none' }}">
                        <div class="mb-1 text-xs text-gray-300">
                            {{ message.author.ofUser.email }}
                        </div>
                        <div class="text-white leading-snug break-words">
                            {{ message.content|raw }}
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-center text-[#777]">Aucun message pour le moment.</p>
            {% endfor %}
        </div>

        <div class="fixed bottom-0 left-0 right-0 bg-[#2b2b2b] border-t border-[#444] py-4">
            {{ form_start(form) }}
            <div class="flex items-center gap-2 max-w-2xl mx-auto">
                {{ form_widget(form.content, {
                    'attr': {
                        'placeholder': 'Envoyer un message...',
                        'class': 'flex-1 bg-[#1e1e1e] border border-[#444] rounded-full px-4 py-2 text-sm text-white placeholder-[#666] focus:outline-none'
                    }
                }) }}
                <button type="submit" class="bg-blue-600 hover:bg-blue-500 text-white rounded-full p-2 transition">
                    {{ ux_icon('raphael:arrowalt', { class: 'w-5 h-5' }) }}
                </button>
            </div>
            {{ form_end(form) }}
        </div>

    </div>
{% endblock %}
