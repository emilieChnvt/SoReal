{% extends 'base.html.twig' %}

{% block title %}Chat{% endblock %}

{% block body %}
    <div class="flex flex-col h-screen bg-[#1e1e1e] text-white">

        <div class="flex-1 overflow-y-auto p-6 space-y-4 max-w-2xl mx-auto w-full pb-28">
            {% for message in chat.messages %}
                {% set isCurrentUser = message.author.id == app.user.profile.id %}
                <div class="flex {{ isCurrentUser ? 'justify-end' : 'justify-start' }}">
                    <div class="max-w-[70%] px-4 py-2 rounded-2xl text-sm shadow-md
                                {{ isCurrentUser ? 'bg-blue-600 rounded-br-none' : 'bg-[#8D8484] rounded-bl-none' }}">
                        <div class="mb-1 text-xs text-gray-300">
                            {{ message.author.ofUser.email }}
                        </div>
                        <div class="text-white leading-snug break-words">
                            {{ message.content|raw }}
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-center text-[#777]">Aucun message pour le moment.</p>
            {% endfor %}
        </div>

        <div class="fixed bottom-0 left-0 right-0 p-4 bg-[#2b2b2b] border-t border-[#444]">
            {{ form_start(form) }}
            <div class="flex items-center gap-2 max-w-2xl mx-auto">
                {{ form_widget(form.content, {
                    'attr': {
                        'placeholder': 'Envoyer un message...',
                        'class': 'flex-1 bg-[#1e1e1e] border border-[#444] rounded-full px-4 py-2 text-sm text-white placeholder-[#666] focus:outline-none'
                    }
                }) }}
                <button type="submit" class="bg-blue-600 hover:bg-blue-500 text-white rounded-full p-2 transition">
                    {{ ux_icon('raphael:arrowalt', { class: 'w-5 h-5' }) }}
                </button>
            </div>
            {{ form_end(form) }}
        </div>

    </div>
{% endblock %}
